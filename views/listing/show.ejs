<% layout("/layouts/boilerplate") -%>
    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3>Listing Details :</h3>
        </div>
            <div class="card col-6 offset-3 card-show">
                <img src="<%=list.image%>" class="card-img-top show-img" alt="Listing_Image">
                <div class="card-body">
                    <p class="card-text">
                        <b><%=list.title%></b><br>
                        <%=list.description%><br>
                        <%=list.price.toLocaleString("en-IN")%><br>
                        <%=list.country%><br>
                        <%=list.location%><br>
                    </p>
                </div>
            </div>
            <div class="btns">
                <a href="/listing/<%=list._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
            <br>
            <form method="post" action="/listing/<%=list._id%>?_method=DELETE">
                <button class="btn btn-dark offset-4">Delete</button>
            </form>
            </div>
    </div>