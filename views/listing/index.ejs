<% layout("/layouts/boilerplate") -%>
<body>
    <h3>All Listings</h3>
    <!--<form method="get" action="/listing/new">
        <button>Add</button>
    </form>-->
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1
    ">
        <% for(let list of alllist){ %>
          <a href="/listing/<%=list._id%>" class="listing-link">
            <div class="card col">
                <img src="<%= list.image%>" class="card-img-top" alt="Listing_Image" style="height: 20rem;">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text">
                    <b><%= list.title%><br></b>
                    &#8377; <%= list.price.toLocaleString("en-IN")%>/night
                  </p>
                </div>
              </div>
            </a>
          <% } %>
    </div>
</body>
</html>
