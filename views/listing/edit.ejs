<% layout("/layouts/boilerplate") -%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2" >
            <h3>Edit Details :</h3>
            <br>
            <form method="post" action="/listing/<%=list._id%>?_method=PUT">
                <div class="mb-3">
                    <label for="title" class="form-label">Title :</label>
                    <input name="list[title]"  type="text" value="<%=list.title%>"  id="title" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description :</label>
                    <textarea name="list[description]"  id="description" class="form-control"><%=list.description%></textarea>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image Link :</label>
                    <input name="list[image]" value="<%=list.image%>" type="text" id="image" class="form-control"></input>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price :</label>
                        <input name="list[price]" type="number" value="<%=list.price%>" id=""price class="form-control">
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country :</label>
                        <input name="list[country]" type="text" value="<%=list.country%>" id="country" class="form-control">
                    </div>
                </div>
                
                <div class="mb-3">
                    <label for="location" class="form-label">Location :</label>
                    <input name="list[location]" type="text" value="<%=list.location%>" id="location" class="form-control">
                </div>
                <button class="btn btn-dark mt-3 edit-btn">Update</button>
            </form>
            <br>
        </div>
    </div>
</body>
</html>